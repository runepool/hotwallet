{
  "name": "runepool",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "private": true,
  "main": "main.js",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "bundle": "yarn build && ncc build dist/apps/hotwallet/main.js -o build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "summon": "yarn build &&  yarn build:electron",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/liquidium-dex/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/liquidium-dex/test/jest-e2e.json"
  },
  "build": {
    "appId": "com.runepool.app",
    "productName": "runepool",
    "files": [
      "dist/**/*",
      "webapp/dist/**/*",
      "main.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppIag"
    }
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.2.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/typeorm": "^11.0.0",
    "@noble/curves": "^1.8.1",
    "argon2": "^0.41.1",
    "axios": "^1.7.9",
    "axios-retry": "^4.5.0",
    "better-sqlite3": "^11.8.1",
    "bitcoinjs-lib": "^6.1.7",
    "class-validator": "^0.14.1",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.4.7",
    "ecpair": "^2.1.0",
    "express-basic-auth": "^1.2.1",
    "nestjs-axios-retry": "^1.0.7",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.1.13",
    "runelib": "^1.0.7",
    "rxjs": "^7.8.1",
    "shamir-secret-sharing": "^0.0.4",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/ncc": "^0.38.3",
    "commander": "^13.1.0",
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/wallet(|/.*)$": "<rootDir>/libs/wallet/src/$1",
      "^@app/engine(|/.*)$": "<rootDir>/libs/engine/src/$1",
      "^@app/blockchain(|/.*)$": "<rootDir>/libs/blockchain/src/$1",
      "^@app/exchange-database(|/.*)$": "<rootDir>/libs/exchange-database/src/$1",
      "^@app/execution(|/.*)$": "<rootDir>/libs/execution/src/$1"
    }
  }
}
